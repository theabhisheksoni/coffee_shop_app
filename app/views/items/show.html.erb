<p style="color: green"><%= notice %></p>

<div id="<%= dom_id @item %>">
  <p>
    <strong>Name:</strong>
    <%= @item.name %>
  </p>

  <p>
    <strong>Price:</strong>
    <%= @item.price %>
  </p>

  <p>
    <strong>Tax Percent:</strong>
    <%= @item.tax_category.tax_rate %>
  </p>

  <p>
    <strong>Availability:</strong>
    <%= @item.availability %>
  </p>

</div>

<div>
  <%= link_to "Edit this item", edit_item_path(@item), class: "btn btn-secondary" %>
  <%= link_to "Back to items", items_path, class: "btn btn-secondary" %>
  <%= button_to "Destroy this item", @item, method: :delete, class: "btn btn-danger" %>
</div>
