<%= form_with(model: item, html: { class: "row g-3" }) do |form| %>
  <%= render 'shared/errors', object: item %>

  <div class="col-md-3">
    <%= form.label :name, class: "form-label" %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="col-md-1">
    <%= form.label :price, class: "form-label" %>
    <%= form.text_field :price, class: "form-control" %>
  </div>

  <div class="col-md-3">
    <%= form.label :tax_category_id, class: "form-label" %>
    <%= form.collection_select(:tax_category_id, TaxCategory.all, 'id', 'tax_rate',  { prompt: 'Select Tax Value' }, { class: "form-select" }) %>
  </div>

  <div class="col-12">
    <div class="form-check">
      <%= form.label :availability, class: "form-check-label" %>
      <%= form.check_box :availability, class: "form-check-input" %>
    </div>
  </div>

  <div class="col-12">
    <%= form.submit "Submit", :class => 'btn btn-primary' %>
  </div>
<% end %>
